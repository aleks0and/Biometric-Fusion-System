<Window x:Class="Gui.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui"
        mc:Ignorable="d"
        Title="VerificationWindow" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="First name:" />
        <TextBox Grid.Row="1" Margin="5, 5, 5, 5" Text="{Binding Person.FirstName}" />
        <Label Grid.Row="2" Content="Last name:" />
        <TextBox Grid.Row="3" Margin="5, 5, 5, 5" Text="{Binding Person.LastName}" />
        <Button Grid.Row="4" Content="Ok" Click="CloseWindow" />
    </Grid>
</Window>
