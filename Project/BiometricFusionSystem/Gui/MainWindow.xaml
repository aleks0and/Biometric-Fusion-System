<Window x:Class="Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui"
        mc:Ignorable="d"
        Title="Biometric Fusion System" Height="600" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="24*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Menu Grid.Row="0"  Grid.ColumnSpan="2">
                <MenuItem Header="Options" Command="{Binding OpenOptionsCommand}" />
            </Menu>
            <Grid Grid.Row="1" Grid.Column="0" Margin="5,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid Background="DarkGray"  Grid.Row="0">
                    <Image Source="{Binding Person.Image}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Path: C:/BFS/Samples/faceSample1.bmp"/>
                    <Label Grid.Row="1" Content="Width: 400 Height: 600"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1" Margin="5,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="7*" />
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>

                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Row="1" Grid.ColumnSpan="2" Maximum="100" VerticalAlignment="Center" Margin="5,0,5,0"/>
                <Button Grid.Row="2" Grid.Column="0" Content="Play"/>
                <Button Grid.Row="2" Grid.Column="1" Content="Stop"/>
                <Grid Grid.Row="3" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Path: C:/BFS/Samples/trackSample1.wav"/>
                    <Label Grid.Row="1" Grid.Column="0" Content="Length: 00:00:05" />
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="1" Content="Acquire Face Image" Command="{Binding AcquirePhotoCommand}" />
                <Button Grid.Column="1" Grid.Row="1" Content="Acquire Speech Recording" Command="{Binding AcquireRecordingCommand}" />
                <Button Grid.Column="2" Grid.Row="1" Content="Identify" />
                <Button Grid.Column="3" Grid.Row="1" Content="Verify" Command="{Binding OpenVerificationCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
